<table class="table is-bordered is-hoverable is-fullwidth">
    <tbody>
        {{#each filteredChampions as |champion|}}
            <tr {{action "champDetails" champion.key}}>
                <td class="imageColumn">
                    <figure class="image is-64x64">
                        <img src="http://ddragon.leagueoflegends.com/cdn/{{apiVersion}}/img/champion/{{champion.key}}.png">
                    </figure>
                </td>
                <td class="nameColumn"><strong>{{champion.name}}</strong> {{champion.title}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
